{
  "include": ["src/**/*", "src/**/*.tsx", "mock/**/*", "public/**/*.json"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "composite": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es6",
    "types": ["vite/client"],
    "useUnknownInCatchVariables": false,
    "allowImportingTsExtensions": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@providers/*": ["./src/providers/*"],
      "@services/*": ["./src/services/*"],
      "@stores/*": ["./src/stores/*"],
      "@api/*": ["./src/api/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@features/*": ["./src/features/*"],
      "@guards/*": ["./src/guards/*"],
      "@hocs/*": ["./src/hocs/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@pages/*": ["./src/pages/*"],
      "@libs/*": ["./src/libs/*"],
      "@utils/*": ["./src/utils/*"],
      "@renderer/*": ["./src/*"],
      "@test/*": ["./src/tests/*"],
      "@mock/*": ["./mock/*"],
      "@slices/*": ["./src/slices/*"],
      "@icons/*": ["./src/icons/*"],
      "@locales/*": ["./src/locales/*"],
      "@theme/*": ["./src/theme/*"]
    }
  }
}
